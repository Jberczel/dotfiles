[color]
	ui = true
[user]
	name = Jberczel
	email = jxberc@gmail.com

[alias]
  b   = branch -vv
  blg = log --oneline --graph --decorate --remotes --branches
  co  = checkout
  cp  = cherry-pick
  d   = diff
  dc  = diff --cached
  lg  = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  s   = status
  st  = stash

  ignore   = update-index --skip-worktree
  unignore = update-index --no-skip-worktree
  ignored  = !git ls-files -v | grep "^S"
[core]
  autocrlf = input
	attributesfile = /Users/jxberc/.gitattributes
